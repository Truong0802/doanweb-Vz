<a href="#" class="btn" id="download">In hóa đơn</a>
<div class="detail" id="invoice">
    <div class="invoice">
        <div class="container">
            <div class="row pad-top-botm ">
                <div class="col-lg-6 col-md-6 col-sm-6 ">
                    <div class="cardHeader">
                        <img src="~/Content/images/vz tách nền.jpg" width="100" style="padding-bottom: 20px;" />
                    </div>

                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <strong>Vz Team</strong>
                    <br>
                    <b>Địa chỉ :</b> VQ4P+249, Phường Tân Phú, Quận 9, TP.Hồ Chí Minh
                </div>
            </div>
            <div class="row text-center contact-info">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <hr>
                    <span>
                        <strong>E-mail : </strong> nh6pcgear@gmail.com
                    </span>
                    <span>
                        <strong>SĐT : </strong> +0562403407
                    </span>
                    <hr>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="row pad-top-botm client-info">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <br>
                        <h4>
                            <strong>Thông tin khách hàng</strong>
                        </h4>
                        <b>Họ tên :</b> @item.hotenkh <br>
                        <b>Địa chỉ :</b> @item.diachi<br>
                        <b>SĐT :</b> @item.sdt <br>
                        <b>E-mail :</b> @item.email <br>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <br>
                        <h4>
                            <strong>Thông tin thanh toán </strong>
                        </h4>
                        <b>Tổng tiền : @String.Format("{0:0,0}", item.tongtien) </b>
                        <br>Ngày: @item.ngaymua <br>
                        @if (item.tinhtrangtt == null)
                        {
                            <b> Chưa thanh toán</b>
                        }
                        else
                        {
                            <b> Đã thanh toán </b>
                        }

                        <br>Phương thức thanh toán: COD
                        <br> Ngày giao hàng: @item.ngaygiao
                    </div>


                </div>
                break;
            }
            <div class="list-product">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <td>Tên sản phẩm</td>
                                <td>Số lượng</td>
                                <td>Giá sản phẩm</td>
                                <td>Tổng số tiền</td>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var sp in Model)
                            {
                                <tr>
                                    <td>@sp.tensp</td>
                                    <td>@sp.soluong</td>
                                    <td>@String.Format("{0:0,0}", sp.giasp)</td>
                                    <td>@String.Format("{0:0,0}", sp.tongtt)</td>
                                </tr>
                                <br />
                            }


                        </tbody>
                    </table>
                </div>
                <hr>
                @foreach (var i in Model)
                {
                    <div class="ttl-amts">
                        <h5> Tổng tiền : @String.Format("{0:0,0}", i.tongtien) đ </h5>
                    </div>
                    break;
                }

                <hr>
                <div class="ttl-amts">
                    <h5> Phí vận chuyển: miễn phí </h5>
                </div>
                <hr>
                <div class="ttl-amts">
                    <h5> Voucher: Không có</h5>
                </div>
                <hr>
                <div class="ttl-amts">
                    @foreach (var t in Model)
                    {
                        <h4>
                            <strong>Tổng hóa đơn: @String.Format("{0:0,0}", t.tongtien) đ</strong>
                        </h4>
                        break;
                    }

                </div>
            </div>
        </div>
    </div>

</div>
