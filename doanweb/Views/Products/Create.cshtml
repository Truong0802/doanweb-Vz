<style>
    .product_add {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 5px;
    }

        .product_add label {
            font-weight: bold;
        }

        .product_add .form-group {
            margin-bottom: 20px;
        }

            .product_add .form-group .col-md-2 {
                text-align: right;
            }

            .product_add .form-group .col-md-10 {
                margin-top: 5px;
            }

        .product_add .form-control {
            font-size: 18px;
            width: 95%;
            height: 40px;
            padding: 6px 12px;
            font-size: 18px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }

        .product_add .text-danger {
            color: #a94442;
        }

    .btn-success {
        margin-top: 6px;
        width: 80px;
        padding: 7px 7px;
        background: #287bff;
        text-decoration: none;
        color: var(--white);
        border-radius: 20px;
        cursor: pointer;
        border: none;
        outline: none;
        font-size: 14px;
        font-weight: 600;
        box-shadow: 0 7px 25px rgba(0, 0, 0, 0.08);
    }

    .btn-default {
        margin-top: 30px;
        width: 150px;
        padding: 10px 10px;
        background: #287bff;
        text-decoration: none;
        color: var(--white);
        border-radius: 20px;
        cursor: pointer;
        border: none;
        outline: none;
        font-size: 16px;
        font-weight: 600;
        box-shadow: 0 7px 25px rgba(0, 0, 0, 0.08);
    }

    #pictureUpload,
    #pictureUploadCT1,
    #pictureUploadCT2,
    #pictureUploadCT3,
    #pictureUploadCT4 {
        padding: 20px;
    }
</style>

