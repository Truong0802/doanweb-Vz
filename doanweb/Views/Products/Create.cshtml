                    <div class="form-group">
                        <span>Hình ảnh sản phẩm</span>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HinhAnhSP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HinhAnhSP, "", new { @class = "text-danger" })
                            <img src="@Html.DisplayFor(model => model.HinhAnhSP)" width="500" id="pictureUpload">
                            <input type="file" name="fileUpload" id="fileUpload" accept="image/*" style="display:none;" />
                            <input type="button" id="btnUpload" value="Chọn" class="btn btn-success" />
                        </div>
                    </div>
                    @section upload
                {
                        <script>
                            $(function () {
                                $('#btnUpload').click(function () {
                                    $('#fileUpload').trigger('click');
                                });
                            });
                            $('#fileUpload').change(function () {
                                if (window.FormData !== undefined) {
                                    var fileUpload = $('#fileUpload').get(0);
                                    var files = fileUpload.files;
                                    var formData = new FormData();
                                    formData.append('file', files[0]);

                                    $.ajax(
                                        {
                                            type: 'POST',

                                            url: '/Products/ProcessUpload',
                                            contentType: false,
                                            processData: false,
                                            data: formData,
                                            success: function (urlImage) {
                                                $('#pictureUpload').attr('src', urlImage);
                                                $('#HinhAnhSP').val(urlImage);
                                            },
                                            error: function (err) {
                                                alert('Error ', err.statusText);
                                            }
                                        });
                                }
                            });
                        </script>
                    }

