@model  PagedList.IPagedList<doanweb.Models.SAN_PHAM>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/css/style.css" rel="stylesheet" />

<style>
    .row {
        display: flex;
        justify-content: center;
    }

    .col-lg-4,
    .col-md-4,
    .col-sm-6,
    .col-xs-12 {
        padding: 10px;
    }

    .panel {
        box-shadow: 2px 2px 5px #999;
        border-radius: 10px;
        overflow: hidden;
        height: 450px;
    }

    .product .img-container {
        height: 300px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .product img {
        max-height: 100%;
        max-width: 100%;
    }

    .design {
        text-align: center;
        padding: 20px;
    }

        .design h5 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .design h4 {
            font-size: 24px;
            color: #f00;
        }

    .MenuTrang {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 90px;
    }

        .MenuTrang .pagination {
            margin: 0;
        }

            .MenuTrang .pagination li {
                display: inline-block;
                margin: 0 5px;
            }

                .MenuTrang .pagination li a {
                    color: #333;
                    display: inline-block;
                    padding: 5px 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }

                .MenuTrang .pagination li.active a {
                    background-color: #333;
                    color: #fff;
                }

                .MenuTrang .pagination li.disabled a {
                    color: #ccc;
                }
    a{
       text-decoration: none;
       color: black;
    }
</style>

<section>
    <section class="slider-container">
        <div class="slider-wrapper">
            <div class="slider">
                <img id="slide-1" src="~/Content/images/leaf65.jpg" alt="">
                <img id="slide-2" src="~/Content/images/banner.jpg" alt="">
                <img id="slide-3" src="~/Content/images/hg00.jpg" alt="">
                <img id="slide-4" src="~/Content/images/rx-780-2.jpg" alt="">
            </div>
        </div>
    </section>
    <div class="row">
        <h2>SẢN PHẨM</h2>
        <div class="product-container">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="panel panel-default">
                        <div class="product">
                            <div class="img-container">
                                <a href="@Url.Action("Detail", "Home", new { id = item.MaSP.ToString().TrimEnd(' ')})">
                                    <img src="@item.HinhAnhSP" alt="">
                                </a>
                            </div>
                            <div class="design">
                                <a href="@Url.Action("Detail", "Home", new { id = item.MaSP.ToString().TrimEnd(' ')})">
                                    <h5>@item.TenSP</h5>
                                </a>
                                <h4>@String.Format("{0:0,0}", item.Gia)</h4>
                            </div>
                        </div>
                        
                    </div>
                </div>
            }
        </div>
    </div>

    <div>
        <div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("Index", new
            {
                page = page
            }))
        </div>
    </div>
</section>


<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        var maxLength = 100;
        $(".show-read-more").each(function () {
            var myStr = $(this).text();
            if ($.trim(myStr).length > maxLength) {
                var newStr = myStr.substring(0, maxLength);
                var removedStr = myStr.substring(maxLength, $.trim(myStr).length);
                $(this).empty().html(newStr);
                $(this).append(' <a href="javascript:void(0);" class="read-more">đọc tiếp...</a > ');
                $(this).append('<span class="more-text">' + removedStr + '</span>');
            }
        });
        $(".read-more").click(function () {
            $(this).siblings(".more-text").contents().unwrap();
            $(this).remove();
        });
    });
</script>
<style>
    .show-read-more .more-text {
        display: none;
    }
</style>
